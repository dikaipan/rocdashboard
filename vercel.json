{
  "buildCommand": "cd frontend && NODE_ENV=production npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && rm -rf node_modules package-lock.json .npm .cache && npm cache clean --force && npm install",
  "env": {
    "NODE_ENV": "production"
  },
  "cleanUrls": false,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*\\.json)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/tools",
      "destination": "/api/tools.json"
    },
    {
      "source": "/api/baby-parts",
      "destination": "/api/baby-parts.json"
    },
    {
      "source": "/api/machines",
      "destination": "/api/machines.json"
    },
    {
      "source": "/api/engineers",
      "destination": "/api/engineers.json"
    },
    {
      "source": "/api/stock-parts",
      "destination": "/api/stock-parts.json"
    },
    {
      "source": "/api/fsl-locations",
      "destination": "/api/fsl-locations.json"
    },
    {
      "source": "/api/monthly-machines",
      "destination": "/api/monthly-machines.json"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
