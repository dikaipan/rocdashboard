{
  "buildCommand": "cd frontend && NODE_ENV=production VITE_API_BASE_URL=https://rocdashboard-production.up.railway.app/api npm run build",
  "outputDirectory": "frontend/dist",
  "installCommand": "cd frontend && rm -rf node_modules package-lock.json .npm .cache && npm cache clean --force && npm install",
  "env": {
    "NODE_ENV": "production"
  },
  "cleanUrls": false,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/api/(.*\\.json)$",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/json; charset=utf-8"
        },
        {
          "key": "Cache-Control",
          "value": "public, max-age=300"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
